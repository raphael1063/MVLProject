<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.robin.mvlproject.data.entities.BooksResult" />
        <variable
            name="vm"
            type="com.robin.mvlproject.ui.history.HistoryViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp">

        <TextView
            android:id="@+id/tv_item_history_label_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/purple_500"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/tv_item_history_label_a_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.a.name}"
            android:layout_marginStart="12dp"
            android:textColor="@color/black"
            android:textSize="24dp"
            app:layout_constraintStart_toEndOf="@id/tv_item_history_label_a"
            app:layout_constraintTop_toTopOf="@id/tv_item_history_label_a"
            app:layout_constraintBottom_toBottomOf="@id/tv_item_history_label_a"/>

        <TextView
            android:id="@+id/tv_item_history_label_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="B"
            android:textColor="@color/teal_200"
            android:textSize="24dp"
            app:layout_constraintStart_toStartOf="@id/tv_item_history_label_a"
            app:layout_constraintTop_toBottomOf="@id/tv_item_history_label_a"/>

        <TextView
            android:id="@+id/tv_item_history_label_b_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@{model.b.name}"
            android:textColor="@color/black"
            android:textSize="24dp"
            app:layout_constraintStart_toEndOf="@id/tv_item_history_label_b"
            app:layout_constraintTop_toTopOf="@id/tv_item_history_label_b"
            app:layout_constraintBottom_toBottomOf="@id/tv_item_history_label_b"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>